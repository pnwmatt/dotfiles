{{- if .workstation -}}
#!/usr/bin/env bash
chmod 600 ~/.ssh/pnwmatt.pub
cp ~/.ssh/pnwmatt.pub ~/.ssh/authorized_keys
chmod 600 ~/.ssh/authorized_keys

[ ! -d ~/scripts ] && mkdir ~/scripts
[ ! -d ~/scripts/lib ] && mkdir ~/scripts/lib
[ ! -d ~/workspace ] && mkdir ~/workspace

cp "{{ .chezmoi.sourceDir }}/scripts/lib/*" "{{ .chezmoi.homeDir }}/scripts/lib/."
exit 0
{{- end -}}
